<ul>
    <% comments.each do |comment| %>
        <% if comment.id.present? %>
            <li>
                <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
                    <p><%= comment.content %></p>
                    <% if current_user == topick.user %>
                        <p><%= link_to "コメント編集", edit_topick_comment_path(topick, comment), remote: true %></p>
                <p><%= link_to "コメント削除", topick_comment_path(comment.topick_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
                        <% end %>
            </li>
        <% end %>
    <% end %>
</ul>